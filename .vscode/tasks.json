{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "ejecuntando frontend",
            "command": "npm",
            "args": ["install", "&&", "npm","run", "dev"],
            "options": {
                "cwd": "${workspaceFolder}/FRONTEND"
            },
            "runOptions": {
                "runOn": "folderOpen"
            },            
        },
        {
            "type": "shell",
            "label": "ejecutando backend dev",
            "command": "npm",
            "args": ["install", "&&", "npm","run", "start:dev"],
            "options": {
                "cwd": "${workspaceFolder}/BACKEND"
            },
            "runOptions": {
                "runOn": "folderOpen"
            },            
        }
    ]

}